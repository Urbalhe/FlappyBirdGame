<Window x:Class="FlappyBirdGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
        Title="Flappy Bird" Height="490" Width="800"
        Loaded="Window_Loaded">
	<Grid>
		<Image x:Name="backgroundGif" Stretch="Fill"/>
		<Canvas Name="MyCanvas" Focusable="True" KeyDown="KeyIsDown" Visibility="Hidden">
			<Label Name="scoreText" FontSize="20" Content="Score: 0" Canvas.Left="10" Canvas.Top="10" Foreground="AntiqueWhite"/>
			<Label Name="highScoreText" FontSize="20" Content="High Score: 0" Canvas.Left="650" Canvas.Top="10" Foreground="AntiqueWhite"/>
			<Image Name="flappyBird" Height="54" Width="58" Source="images/flappyBird.png" Canvas.Left="49" Canvas.Top="235"/>
			<Image Name="pipeTop1" Width="60" Height="361" Source="images/pipeTop.png" Canvas.Left="210" Canvas.Top="-167"/>
			<Image Name="pipeBottom1" Width="58" Height="376" Source="images/pipeBottom.png" Canvas.Left="210" Canvas.Top="331"/>
			<Image Name="pipeTop2" Width="74" Height="378" Source="images/pipeTop.png" Canvas.Left="424" Canvas.Top="-242"/>
			<Image Name="pipeBottom2" Width="55" Height="345" Source="images/pipeBottom.png" Canvas.Left="429" Canvas.Top="265"/>
			<Image Name="pipeTop3" Width="62" Height="383" Source="images/pipeTop.png" Canvas.Left="645" Canvas.Top="-178"/>
			<Image Name="pipeBottom3" Width="55" Height="335" Source="images/pipeBottom.png" Canvas.Left="652" Canvas.Top="353"/>
			<Button Name="restartButton" Content="Restart" Width="100" Height="40" Canvas.Left="350" Canvas.Top="200" Visibility="Hidden" Click="RestartButton_Click"/>
			<Rectangle Height="64" Stroke="Black" Fill="Black" Width="1236" Canvas.Top="-56"/>
			<Rectangle Height="64" Stroke="Black" Fill="Black" Width="1236" Canvas.Top="460"/>
		</Canvas>
		<Grid Name="MenuGrid">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<Label Content="Flappy Bird: Pigeon edition" FontSize="36" FontWeight="Bold" Foreground="AntiqueWhite" HorizontalAlignment="Center" Margin="0,0,0,20"/>
				<Button Name="StartButton" Content="Start Game" Width="200" Height="60" FontSize="20" Click="StartButton_Click"/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
